  <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form action='/resources-cases-and-judgements' method="POST">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">View Cases and Judgements</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <div class="modal-body">
              <div class="container mt-5">
                <label for="court-select" class="form-label">Select Court:</label>
                <select name="court" id="court-select">
                  <option  value="ZWCC">Constitution Court</option>
                  <option  value="ZWLC">Labour Courts</option>
                  <option  value="ZWSC">Supreme Court</option>
                  <optgroup label="High Courts">
                    <option  value="ZWBHC">Bulawayo High Court</option>
                    <option  value="ZWCHHC">Chinhoyi High Court</option>
                    <option   value="ZWHHC">Harare High Court</option>
                    <option  value="ZWMSVHC">Masvingo High Court</option>
                    <option  value="ZWMTHC">Mutare High Court</option>
                    </optgroup>
                </select>
              </div>
                             
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form> 
