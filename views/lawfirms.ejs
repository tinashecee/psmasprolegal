
  <div class="container-fluid pt-3">
    <%  for (let error of errors) { %>
      <div class="alert alert-danger" role="alert">
      <%= error.message %>
     </div>
       <% } %>
       <% if(message.success){ %>
         <div class="alert alert-success"  role="alert">
             <%= message.success %>
         </div>
         <% } %>
    <h3 class="">Law Firms Summary&nbsp;</h3>
    <div class="row mt-3 mb-4 mx-0 removable">
      <div class="card-group w-100">
        <div class="card border shadow-none">
          <div class="card-body">
            <div class="row">
              <div class="col d-flex align-items-center">
                <h5 class="card-title text-uppercase text-muted mb-0">
                  Total Law firms
                </h5>
                <span
                  class="badge badge-secondary border ml-2 text-md font-weight-bold mb-0"
                  >+ <%= total_lawfirms.length %></span
                >
              </div>
            </div>
            <p class="mt-2 text-dark font-weight-700 display-3 mb-0"><%= total_lawfirms.length %></p>
          </div>
        </div>
        <div class="card border shadow-none">
          <div class="card-body">
            <div class="row">
              <div class="col d-flex align-items-center">
                <h5 class="card-title text-uppercase text-muted mb-0">
                  active law firms
                </h5>
                <span
                  class="badge badge-secondary border ml-2 text-md font-weight-bold mb-0"
                  ><%= active %></span
                >
              </div>
            </div>
            <p class="mt-2 text-dark font-weight-700 display-3 mb-0"><%= active %></p>
          </div>
        </div>
        <div class="card border shadow-none">
          <div class="card-body">
            <div class="row">
              <div class="col d-flex align-items-center">
                <h5 class="card-title text-uppercase text-muted mb-0">
                  inactive law firms
                </h5>
                <span
                  class="badge badge-secondary border ml-2 text-md font-weight-bold mb-0"
                  >+ <%= not_active %></span
                >
              </div>
            </div>
            <p class="mt-2 text-dark font-weight-700 display-3 mb-0"><%= not_active %></p>
          </div>
        </div>
       
      </div>
    </div>
    <div class="row removable">
      <div class="col-lg-12">
        <div class="row removable">
          <div class="col-lg-8">
            <div class="row removable">
              <div class="col-lg-6">
                <button
                  type="button"
                  class="btn btn-primary"
                  data-toggle="modal"
                  data-target="#exampleModal"
                >
                  Add Law Firm
                </button>
                
                <div
                  class="modal fade"
                  id="exampleModal"
                  tabindex="-1"
                  aria-labelledby="exampleModalLabel"
                  style="display: none"
                  aria-hidden="true"
                >
                  <div
                    class="modal-dialog modal-dialog-centered"
                    role="document"
                  >
                    <div class="modal-content">
                      <form action="/add-lawfirm" method="POST">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                          Add Law Firm
                        </h5>
                        <button
                          type="button"
                          class="close"
                          data-dismiss="modal"
                          aria-label="Close"
                        >
                          <span aria-hidden="true">X</span>
                        </button>
                       
                      </div>
                      <div class="modal-body">
                        
                          <div class="mb-3">
                            <label for="law-firm" class="form-label"
                              >Law Firm</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="law-firm"
                              name="law_firm"
                              required
                            />
                          </div>
                          <div class="mb-3">
                            <label for="address" class="form-label"
                              >Address</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="address"
                              name="address"
                            />
                          </div>
                          <div class="mb-3">
                            <label for="vat-number" class="form-label"
                              >VAT Number</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="vat-number"
                              name="vat_number"
                            />
                          </div>
                          
                          <div class="mb-3">
                            <label for="phone_number" class="form-label"
                              >Phone Number</label
                            >
                            <input
                              type="tel"
                              class="form-control"
                              id="phone_number"
                              name="phone_number"
                              required
                            />
                          </div>
                          <div class="mb-3">
                            <label for="website" class="form-label"
                              >Website</label
                            >
                            <input
                              type="text"
                              class="form-control"
                              id="website"
                              name="website"
                            />
                          </div>
                          <div class="mb-3">
                            <label for="email" class="form-label"
                              >Email Address</label
                            >
                            <input
                              type="email"
                              class="form-control"
                              id="email"
                              name="email"
                            />
                          </div>
                          <div class="mb-3">
                            <label for="contact_person" class="form-label">Contact Person</label>
                            <div id="contact-container">
                              <div class="contact-input">
                                <div class="row mb-3">
                                <div class="col-md-6">
                                <label for="name1">Name:</label>
                                <input type="text"  class="form-control" name="name1" required>
                              </div>
                              <div class="col-md-6">
                                <label for="email1">Email:</label>
                                <input type="email"  class="form-control" name="email1" required>
                              </div>
                              </div>
                              <div class="row mb-3">
                              <div class="col-md-6">
                                <label for="position1">Position:</label>
                                <input type="text"  class="form-control" name="position1" required>
                              </div>
                              <div class="col-md-6">
                                <label for="phone1">Phone:</label>
                                <input type="tel"  class="form-control" name="phone1" required>
                              </div>
                              </div>
                                <div class="row">
                                  <div class="col-md-6"><button type="button" style="width: 50%;" onclick="addContact()">+</button></div>
                                
                                </div>
                              </div>
                            </div>
                          </div>
                      </div>
                      <div class="modal-footer">
                        <button
                          type="button"
                          class="btn btn-secondary"
                          data-dismiss="modal"
                        >
                          Close
                        </button>
                        <button type="submit" class="btn btn-primary">
                          Submit
                        </button>
                      </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-6"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header border-0">
        <div class="row align-items-center">
          <div class="col">
            <div class="form-group mb-0">
              <div class="input-group">
                <button type="button" class="btn" data-toggle="modal" data-target="#exampleModalSearch">
                  <i class="fas fa-search"></i
                      > Search
               </button>
              </div>
            </div>
          </div>
          <div class="col text-right">
            <button  data-toggle="modal" data-target="#exampleModalExport" class="btn btn-sm btn-primary">Export</button>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <% if (data.length > 0) { %>
        <table class="table align-items-center table-flush">
          <thead class="thead-light">
            <tr>
              <th scope="col">&nbsp; &nbsp; &nbsp; &nbsp; No.</th>
              <th scope="col">law Firm</th>
              <th scope="col">Primary Email&nbsp;</th>
              <th scope="col">Phones</th>
              <th scope="col">Date Created</th>
            </tr>
          </thead>
          <tbody id="resultsContainer">
           
              <% for (let dat of data) { %>
            <tr class="car">
              <th scope="row">
                <div class="d-flex align-items-center">
                
                  <span>&nbsp; &nbsp; &nbsp; &nbsp;<%= dat.law_firm_id %></span>
                </div>
              </th>
              <td><span><a class="car-title" href='/lawfirm_view?id=<%= dat.law_firm_id %>'><%= dat.name %></a></span>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <span class="ml-2 car-title" ><%= dat.email %></span>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <span class="ml-2"><%= dat.phone_number %></span>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <span class="ml-2"><%= moment(dat.date_created).format('Do MMMM, YYYY') %></span>
                </div>
              </td>
             
            </tr>
            <% } %>
          
          </tbody>
        </table>
        <% } else { %>
          <div style="padding: auto;margin:auto;position: relative;left:40%"><p>No Law firms to show!</p></div>
          
        <% } %>  
      </div>
    </div>
    
  </div>
  <div class="row removable">
    <div class="col-lg-12">
        <div class="row removable">
            <div class="col-lg-12">
                <div class="row removable">
                    <div class="col-lg-4">
                        <div class="row removable">
                            <div class="col-lg-4">
                                <nav aria-label="..." class="">
                                    <ul class="pagination">
                                        <li class="page-item">
                            
                                            <% if (page > 1) { %>
                                              <a class="page-link" href="/lawfirms?page=<%= page - 1 %>">
                                                <i class="fa fa-angle-left"></i>
                                                <span class="sr-only">Previous</span>
                                              </a>
                                          <% } %>
                                        </li>
                                        <li class="page-item">
                                           
                                            <% if (data.length === 10) { %>
                                              <a class="page-link" href="/lawfirms?page=<%= page + 1 %>">
                                                <i class="fa fa-angle-right"></i>
                                                <span class="sr-only">Next</span>
                                              </a>
                                          <% } %>
                                        </li>
                                        <li class="page-item">
                                          <a class="page-link" href="#"><%= page %></a>
                                          </li>
                                    </ul>
                                </nav>
                            </div>
                            <div class="col-lg-4"></div>
                            <div class="col-lg-4"></div>
                        </div>
                    </div>
                   
                    <div class="col-lg-4">
                        <div class="row removable">
                            <div class="col-lg-6"></div>
                            <div class="col-lg-6"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModalSearch"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" style="max-width: 960px;
  width: 100%;" role="document">
      <div class="modal-content" >
          <div class="modal-header">
              <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"
                      ><i class="fas fa-search"></i
                    ></span>
                  </div>
                  <input
                    class="form-control"
                    placeholder="Search"
                    type="text"
                    id="searchInput"
                  />
                </div>
          </div>
          <div class="modal-body">
            <div class="table-responsive">
              <table class="table align-items-center table-flush" id="table">
                <thead class="thead-light">
                  <tr>
                    <th scope="col">&nbsp; &nbsp; &nbsp; &nbsp; No.</th>
                    <th scope="col">law Firm</th>
                    <th scope="col">Primary Email&nbsp;</th>
                    <th scope="col">Phones</th>
                    <th scope="col">Date Created</th>
                  </tr>
                </thead>
                <tbody id="resultsContainer">
                  <% if (lawfirms.length > 0) { %>
                    <% for (let dat of lawfirms) { %>
                  <tr class="car">
                    <th scope="row">
                      <div class="d-flex align-items-center">
                      
                        <span>&nbsp; &nbsp; &nbsp; &nbsp;<%= dat.law_firm_id %></span>
                      </div>
                    </th>
                    <td><span><a class="car-title" href='/lawfirm_view?id=<%= dat.law_firm_id %>'><%= dat.name %></a></span>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <span class="ml-2 car-title" ><%= dat.email %></span>
                      </div>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <span class="ml-2"><%= dat.phone_number %></span>
                      </div>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <span class="ml-2"><%= moment(dat.date_created).format('Do MMMM, YYYY') %></span>
                      </div>
                    </td>
                   
                  </tr>
                  <% } %>
                  <% } %>
                
                </tbody>
              </table>
            </div>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
      </div>
  </div>
</div>  
<div class="modal fade" id="exampleModalExport"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
      <form action="/download3" method="get">
      <div class="modal-content" >
          <div class="modal-header">
            
          </div>
          <div class="modal-body">
              <div class="mb-3">
                  <label for="export_type" class="form-label"
                    >Export As</label
                  >
                  <select
                    class="form-select"
                    id="export_type"
                    name="export_type"
                    required
                  >
                    <option value="pdf">PDF</option>
                    <option value="excel">Excel</option>
                  </select>
                </div>
          </div>
          <div class="modal-footer">
              <button type="submit" class="btn btn-secondary">Export</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
      </div>
      </form>
  </div>
</div>