<section class="">
    <div
      class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg"
      style="background-image: url('/img/books.jpg')"
    >
      <span class="mask bg-gradient-dark opacity-6"></span>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5 text-center mx-auto">
            <h1 class="text-white mb-2 mt-5">Set Password!</h1>
            <%  for (let error of errors) { %>
              <div class="error">
                 <p style="color: red;background-color: azure;border-radius: 50px;"><%= error.message %></p>
              </div>
                <% } %>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row mt-lg-n10 mt-md-n12 mt-n11">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
          <div class="card z-index-0">
            <div class="card-header text-center pt-4"></div>
            <div>
              <img
                src="/img/logo.png"
                alt="NUST Logo"
                width="96"
                height="122"
                style="display: block; margin: auto"
              />
            </div>
            <div class="card-body">
              <form action="/set-password?email=<%= email %>" method="POST">
                <div class="mb-3">
                  <input
                    type="password"
                    class="form-control"
                    name="new_password"
                    placeholder="New password"
                    aria-label="new_password"
                    required
                  />
                  <div
                    data-lastpass-icon-root="true"
                    style="
                      position: relative !important;
                      height: 0px !important;
                      width: 0px !important;
                      float: left !important;
                    "
                  ></div>
                  <div
                    data-lastpass-icon-root="true"
                    style="
                      position: relative !important;
                      height: 0px !important;
                      width: 0px !important;
                      float: left !important;
                    "
                  ></div>
                  <div
                    data-lastpass-icon-root="true"
                    style="
                      position: relative !important;
                      height: 0px !important;
                      width: 0px !important;
                      float: left !important;
                    "
                  ></div>
                </div>
                <div class="mb-3">
                  <input
                    type="password"
                    class="form-control"
                    name="confirm_password"
                    placeholder="Confirm password"
                    aria-label="Confirm password"
                    required
                  />
                </div>

                <div class="text-center">
                  <button
                    type="submit"
                    class="btn bg-gradient-info w-100 my-4 mb-2"
                  >
                    Submit
                  </button>
                </div>
                <br></br>
              </form>
             
            </div>
          </div>
        </div>
      </div>
      <br /><br />
    </div>
  </section>