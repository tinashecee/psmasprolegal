                        <div class="ml-3">
                          <h5 class="mb-0">assigned To</h5>
                          <p class="text-sm mb-0">
                            <%= data[0].assigned_to %>
                          </p>
                        </div>
                      </div>
                      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal3"
                    ><i class="fa fa-edit"></i
                  ></button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">PDF Preview</h5>
          </div>
          <div class="card-body">
            <div class="embed-responsive embed-responsive-16by9">
              <embed
                class="embed-responsive-item"
                id="embed-pdf"
                type="application/pdf"
              />
            </div>
          </div>
        </div>
        <div class="row removable">
          <div class="col-lg-12"></div>
        </div>
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">Documents</h5>
            <form action="/upload-document?id=<%= id %>" method="post" enctype="multipart/form-data">
              <input id='files' name="avatar" class="btn btn-primary" type="file" >
              <input class="btn btn-primary" type="submit">
            </form>
          </div>
          <% if(data[0].docs != null) { %>
          <% if(data[0].docs.length != 0) { %>
            <ul class="list-group list-group-flush">
              <% for (let dat of data[0].docs) { %>
    <li class="list-group-item">
      <div class="row align-items-center">
        <div class="col-md-1">
        <button type="button" class="btn btn-primary" onclick="changeSrc('<%= dat %>')"
          ><i class="fa fa-eye"></i
        ></button>
      </div>
      <div class="col-md-1"></div>
        <div class="col-md-8">
          
          <h6 class="card-subtitle mb-2 text-muted">File Name</h6>
          <p class="card-text"><%= dat %></p>
        </div>
      <div class="col-md-1">
        <% if(user_role == 'Admin') { %>
      <button class="btn  btn-danger" onclick="deleteFile('<%= dat %>' , '<%= id %>')"  data-toggle="modal" data-target="#exampleModal8" data-original-title="Edit product">
        <i class="fas fa-trash"></i>
    </button>
    <% } %>
      </div>
        
      
      </div>
    </li>
    <% } %>
  </ul>
  <% } %>
  <% } %>
        </div>
      </div>
    </div>
  </div>

